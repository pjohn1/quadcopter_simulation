<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro" name="${robot_name}">

    <link name="map"/>

    <!-- Base link -->
    <link name="base_link">
        <inertial>
            <mass value="1.0"/>
            <origin xyz="0 0 0"/>
            <inertia ixx="0.1" ixy="0.0" ixz="0.0" iyy="0.1" iyz="0.0" izz="0.1"/>
        </inertial>
        <visual>
            <geometry>
                <mesh filename="package://quad_model/meshes/drone.obj" scale="0.1 0.1 0.1"/>
            </geometry>
        </visual>
    </link>

    <!-- Fixed joint to world -->
    <joint name="world_joint" type="fixed">
        <parent link="map"/>
        <child link="base_link"/>
        <origin xyz="6.7 2.6 2.95"/>
    </joint>

    <!-- LiDAR Link -->
    <link name="lidar_link">
        <visual>
            <geometry>
                <cylinder radius="0.05" length="0.02"/>
            </geometry>
        </visual>
        <collision>
            <geometry>
                <cylinder radius="0.05" length="0.02"/>
            </geometry>
        </collision>
        <inertial>
            <mass value="0.1"/>
            <origin xyz="0 0 0"/>
            <inertia ixx="0.001" iyy="0.001" izz="0.001" ixy="0" ixz="0" iyz="0"/>
        </inertial>
    </link>

    <!-- Fixed Joint for LiDAR -->
    <joint name="lidar_joint" type="fixed">
        <parent link="base_link"/>
        <child link="lidar_link"/>
        <origin xyz="0.0 0.0 0.2" rpy="0 0 0"/>
    </joint>

    <!-- Gazebo Plugin for Forces -->
    <gazebo>
        <plugin name="custom_force_plugin" filename="libcustom_force_plugin.so">
            <topic>/quadcopter/forces</topic>
        </plugin>
    </gazebo>

    <!-- Gazebo Configuration for LiDAR -->
    <gazebo reference="lidar_link">
        <sensor type="ray" name="lidar">
            <pose>0 0 0 0 0 0</pose>
            <update_rate>10</update_rate>
            <ray>
                <scan>
                    <horizontal>
                        <samples>360</samples>
                        <resolution>1.0</resolution>
                        <min_angle>-1.57</min_angle>
                        <max_angle>1.57</max_angle>
                    </horizontal>
                </scan>
                <range>
                    <min>0.1</min>
                    <max>10.0</max>
                    <resolution>0.01</resolution>
                </range>
            </ray>
            <plugin name="gazebo_ros_ray_sensor" filename="libgazebo_ros_ray_sensor.so">
                <ros>
                    <remapping>scan:=/scan</remapping>
                </ros>
            </plugin>
        </sensor>
    </gazebo>

</robot>
